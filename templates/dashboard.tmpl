<!DOCTYPE html>
<html>
<head>
    <title>蓝绿发布管理系统</title>
    <link rel="stylesheet" href="/static/css/bootstrap.min.css">
    <link rel="stylesheet" href="/static/css/custom.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">应用部署控制台</h1>

        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        当前版本: {{.CurrentVersion}}
                    </div>
                    <div class="card-body">
                        <div class="alert alert-{{if .HealthStatus}}success{{else}}danger{{end}}">
                            服务状态: {{if .HealthStatus}}健康{{else}}异常{{end}}
                        </div>
                        <div class="mt-3">
                            <a href="/versions" class="btn btn-primary">查看所有版本</a>
                            <button class="btn btn-warning"
                                onclick="performRollback()">回滚到备用版本</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        部署新版本
                    </div>
                    <div class="card-body">
                        <form action="/upload" method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <input type="file" name="file" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <input type="text" name="version"
                                    placeholder="版本号 (例: v2.0.1)"
                                    class="form-control" required>
                                <input type="text" name="version"
                                    placeholder="部署端口 (例: 8081)"
                                    class="form-control" required>
                            </div>
                            <button type="submit" class="btn btn-success">上传并部署</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
    function performRollback() {
        if (confirm('确认要回滚到备用版本吗？')) {
            fetch('/rollback', { method: 'POST' })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    }
                });
        }
    }
    </script>
    <script src="/static/js/jquery.min.js"></script>
    <script src="/static/js/echarts.min.js"></script>
    <script src="/static/js/app.js"></script>
</body>
</html>